<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/image_drink"
        android:layout_width="40dp"
        android:layout_height="40dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_minus_drink"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_minus_drink"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_marginLeft="10dp"

        android:gravity="center"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/image_drink"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_drink_count"
        android:layout_width="15dp"
        android:layout_height="20dp"

        android:gravity="center"
        android:text="0"
        android:textSize="15sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/btn_minus_drink"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_plus_drink"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:gravity="center"
        android:text="+"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/text_drink_count"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>